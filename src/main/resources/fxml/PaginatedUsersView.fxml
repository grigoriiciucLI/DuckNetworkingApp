<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="UI.PaginatedUsersController">
    <TextField fx:id="searchField" promptText="Search by username..."/>
    <TableView fx:id="usersTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="usernameColumn" text="Username"/>
            <TableColumn fx:id="emailColumn" text="Email"/>
        </columns>
    </TableView>
    <HBox spacing="10">
        <Button fx:id="prevButton" text="Previous"/>
        <Label fx:id="pageLabel" text="Page 1"/>
        <Button fx:id="nextButton" text="Next"/>
    </HBox>
</VBox>

