<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<VBox spacing="10" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="UI.UsersController">
    <TextField fx:id="searchField" promptText="Search username..."/>
    <Button text="Search" onAction="#handleSearch"/>
    <TableView fx:id="usersTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="usernameColumn" text="Username"/>
            <TableColumn fx:id="emailColumn" text="Email"/>
        </columns>
    </TableView>
    <Label text="Notifications:"/>
    <ListView fx:id="notificationListView" prefHeight="150"/>
    <Button text="Mark All As Seen" onAction="#markAllAsRead"/>
    <Button text="Log out" onAction="#handleLogout" />
</VBox>